<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hosinsa.mapper.MemberAddressMapper">
	<!-- getList -->
	<select id="getList" resultType="com.hosinsa.domain.MemberAddressVO">
		SELECT * FROM HOSINSA_MEMBER_ADDRESS
		select * from member_address where address_no > 0
	</select>
	<insert id="register">
		IN
		insert into member_address values
		(address_seq.nextval,#{id}, #{address}, #{zipcode})
	</insert>
	<!-- getList -->
	<select id="read" resultType="com.hosinsa.domain.MemberAddressVO">
		select * from member_address where address_no = #{address_no}
	</select>
	
	<!-- register -->
	<!-- DELETE ë¬¸ -->
	<delete id="delete">
		delete from member_address where address_no = #{address_no}
	</delete>
	
	<!-- UPDATE ë¬¸ -->
	<update id="update">
		update member_address set
		id = #{id},
		address = #{address},
		zipcode = #{zipcode}
		where address_no = #{address_no}
	</update>

</mapper>