<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hosinsa.mapper.AddressMapper">

<!-- SELECT 문 -->
<select id="getList" resultType="com.hosinsa.domain.MemberAddressVO">
	select * from member_address where address_no > 0
</select>

<select id="read" resultType="com.hosinsa.domain.MemberAddressVO">
	select * from member_address where address_no = #{address_no}
</select>

<!-- INSERT 문 -->
<insert id="insert">
	insert into member_address values
	(address_seq.nextval,#{id}, #{address}, #{zipcode})
</insert>

<insert id="insertSelectKey">
	<selectKey keyProperty="address_no" order="BEFORE" resultType="long">
		select address_seq.nextval from dual
	</selectKey>
	
	insert into member_address values
	(#{address_no} ,#{id}, #{address}, #{zipcode})
</insert>

<!-- DELETE 문 -->
<delete id="delete">
	delete from member_address where address_no = #{address_no}
</delete>

<!-- UPDATE 문 -->
<update id="update">
	update member_address set
	id = #{id},
	address = #{address},
	zipcode = #{zipcode}
	where address_no = #{address_no}
</update>

</mapper>